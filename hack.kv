MDBoxLayout:
	adaptive_height: False

	MDBottomNavigation:

		MDBottomNavigationItem:

			text: "Logga"
			name: "logga"
			icon: "file-document"
			MDBoxLayout:



				orientation: 'vertical'

                MDToolbar:


                    elevation: 20
                    title: "Footprint"

                    md_bg_color: app.theme_cls.primary_color

				MDLabel:
					id:response
					text:"Jag vill logga:"
                    halign: "center"


                MDFloatLayout:



                    MDRaisedButton:
                        text: "Transport"
                        id: transknapp
                        md_bg_color: 1,1,1,1
                        on_press: app.trans_press()
                        pos_hint: {'x': .2, 'y': .7}


                    MDRaisedButton:
                        id: matknapp
                        text: "Mat"
                        pos_hint: {'x': .6, 'y':.7}
                        md_bg_color: 1,1,1,1
                        on_press: app.mat_press()

                MDLabel:
                    text:""
                    halign: "center"
                    id: translabel

                MDBoxLayout:
                    orientation:'horizontal'

				    MDTextField:
                        id: input
					    hint_text:"Hej"
				    MDFillRoundFlatButton:
                        text_color: 1, 1, 1, 1
					    text:"logga"
					    on_press: app.press()

		MDBottomNavigationItem:
			text: 'Se din p\u00e5verkan'
			name: "se"
			icon: "chart-line"
			BoxLayout:
				orientation: 'vertical'

                Image:
                    id: img
                    source: app.image

                    size_hint_y: None
                    height: dp(400)

                MDLabel:
                    id: mess
                    text:app.message
                MDLabel:
                    id: tree
                    text:'Det tar 100 träd för att kompensera dina utsläpp på ett år'


                MDRaisedButton:
                    md_bg_color: 1,1,1,1
                    text: 'uppdatera'
                    on_press: app.update()


		MDBottomNavigationItem:
			text: 'Inställningar'
			name: "se2"
			icon: "cog"
			BoxLayout:
                orientation: 'vertical'



                FloatLayout:


                    MDLabel:
                        text: 'Vad har du för bil?'
                        pos_hint: {'center_x': .55, "center_y": 0.7}


                    MDCheckbox:
                        id:liten
                        group: 'group'
                        size_hint: None, None
                        size: dp(48), dp(48)
                        active: True
                        pos_hint: {'center_x': .5, 'center_y': 0.7}
                        MDLabel:
                            text:'Liten'
                            pos: self.parent.pos
                    MDCheckbox:
                        id:mellan
                        group: 'group'
                        size_hint: None, None
                        size: dp(48), dp(48)
                        pos_hint: {'center_x': .7, 'center_y': 0.7}
                        MDLabel:
                            text:'Mellan'
                            pos: self.parent.pos
                    MDCheckbox:
                        id:stor
                        group: 'group'
                        size_hint: None, None
                        size: dp(48), dp(48)
                        pos_hint: {'center_x': .9, 'center_y': 0.7}
                        MDLabel:
                            text:'Stor'
                            pos: self.parent.pos
                    MDLabel:
                        text: 'Hur många kWh el använder du per månad?'
                        pos_hint: {'center_x': .58, "center_y": 0.3}

                    MDSlider:
                        id: electricity
                        min: 0
                        max: 4000
                        value: 800
                        pos_hint: {"y": -0.4}
                        color: app.theme_cls.accent_color

                    MDLabel:
                        text: 'Hur många kubikmeter vatten använder du per månad?'
                        pos_hint: {'center_x': .58, "center_y": -0.3}
                MDSlider:
                    id: water
                    min: 0
                    max: 100
                    value: 30
                    pos_hint: {"y": -0.1}
