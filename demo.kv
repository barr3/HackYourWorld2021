<Display>:
	BoxLayout:
		orientation: "vertical"

		ScreenManager:
			id: sm
			Screen_One:
			Screen_Two:
			Screen_Three:



		BoxLayout:
			size_hint: 1, None
			height: '100dp'
			Button:
				text: 'Logga'
				#on_release: run_conversation('hello')
				
			Button:
				text: 'Din påverkan'
